    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceRoot}/src/server/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "runtimeArgs": [
                "--inspect-brk=127.0.0.1:5858"
            ],
            "port": 5858,
            "cwd": "${workspaceRoot}/src/server"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug",
            // "runtimeArgs": [
            //     "--inspect-brk=127.0.0.1:5858"
            // ],
            // "program": "${workspaceRoot}/src/server/src/index.js",
            // "runtimeExecutable": "${workspaceFolder}/src/server/node_modules/.bin/babel-node",
            // "port": 9000,
            "cwd": "${workspaceRoot}/src/server",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        }
    ],
    
}